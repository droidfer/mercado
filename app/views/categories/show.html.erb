<div class="mx-auto md:w-2/3 w-full">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>
  
  
    <div class="mt-2 flex justify-between">
  
      <div class="flex">
        <div class="text-3xl font-bold">
          <%= render @category %>
        </div>
      </div>
      <div class="flex">
        <%= button_to 'Editar', edit_category_path(@category), method: :get, class: "ml-2 rounded-lg py-1 px-2 bg-green-50 inline-block font-medium" %>
        <%= button_to 'Borrar', category_path(@category), method: :delete, class: "ml-2 rounded-lg py-1 px-2 bg-red-50 inline-block font-medium" %>
        <%= button_to 'Volver', categories_path, method: :get, class: "ml-2 rounded-lg py-1 px-2 bg-gray-100 inline-block font-medium" %>
      </div>
    </div>
  
  
    <div class="mt-10 text-2xl font-semibold text-gray-500 underline">
      Subcategorias
    </div>
    <div id="subcategories" class="min-w-full mt-5">
      <%= render @category.subcategories %>
    </div>

  
    
</div>
