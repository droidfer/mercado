<div id="<%= dom_id task %>">
  
  <p class="mt-5 text-3xl">
    <%= task.name %>
  </p>
  
  <p class="mt-1">
    <%= "RFQ #{task.tender&.rfq_id}" %>
  </p>
  
  <span class="text-xs font-semibold inline-block mt-1 py-1 px-2 uppercase rounded text-white bg-<%= task.alertColor %>-600 uppercase last:mr-0 mr-1">
    <%= task.status %>
  </span>
  
  <p class="mt-5 flex">
    <strong class="block font-medium mb-1 mr-2 text-sm">Finish at:</strong>
    <%= task.finish_at %>
  </p>
  
  <p class="mt-1 flex">
    <strong class="block font-medium mb-1 mr-2 text-sm">Publish at:</strong>
    <<%= task.publish_at %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this task", task, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this task', edit_task_path(task), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
