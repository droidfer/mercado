<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

	  <%= render @tender %>
	
	  <h4 class="text-2xl font-normal leading-normal mt-10 mb-2 text-indigo-800">
		  Active Offers
	  </h4>
	  
    <div id="offers" class="min-w-full items-center">
      <% @tender.offers.active.each do |offer| %>
      
        <div class="mt-2 flex justify-between">
          <div class="flex">
            <%= offer.presented_at %>
            
            <span class="ml-2 text-xs font-semibold inline-block py-1 px-2 uppercase rounded text-zinc-600 bg-zinc-200 uppercase last:mr-0 mr-1">
		        <%= offer.status %>
		      </span>
          </div>
          <div class="flex">
            <%= link_to "Ver", offer, class: "text-blue-500 border border-blue-500 hover:bg-blue-500 hover:text-white active:bg-blue-600 font-bold uppercase text-sm px-2 py-1 rounded outline-none focus:outline-none mr-1 mb-1 ease-linear transition-all duration-150" %>
          </div>
        </div>
      
        <hr class="mt-2">
      <% end %>
    </div>
	
	  <div class="flex mt-10 justify-between px-5 py-2 bg-gray-50">
		  <%= button_to 'Editar', edit_tender_path(@tender), method: :get, class: "ml-2 rounded-lg py-1 px-5 bg-green-50 inline-block font-medium" %>
		  <%= button_to 'Borrar', tender_path(@tender), method: :delete, class: "ml-2 rounded-lg py-1 px-5 bg-red-50 inline-block font-medium" %>
		  <%= button_to 'Volver', tenders_path, method: :get, class: "ml-2 rounded-lg py-1 px-5 bg-gray-200 inline-block font-medium" %>
	  </div>
  </div>
  

  
</div>
