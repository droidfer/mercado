<div id="<%= dom_id tender %>">
  <div class="mt-2 flex justify-between">
    <div class="flex">
      <%= "RFQ_#{tender.rfq_id} - #{tender.name}" %>
    </div>
    <div class="flex">
      <% if action_name != "show" %>
        <%= link_to "Ver", tender, class: "rounded-lg py-2 px-4 bg-gray-50 inline-block font-small" %>
        <%= link_to 'Editar', edit_tender_path(tender), class: "rounded-lg py-2 ml-2 px-4 bg-red-50 inline-block font-small" %>
        <hr class="mt-6">
      <% end %>
    </div>
  </div>
</div>