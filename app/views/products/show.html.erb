<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <%= render @product %>
  
    <div class="flex mt-5">
      <%= button_to 'Editar', edit_product_path(@product), method: :get, class: "ml-2 rounded-lg py-1 px-2 bg-green-50 inline-block font-medium" %>
      <%= button_to 'Borrar', product_path(@product), method: :delete, class: "ml-2 rounded-lg py-1 px-2 bg-red-50 inline-block font-medium" %>
      <%= button_to 'Volver', products_path, method: :get, class: "ml-2 rounded-lg py-1 px-2 bg-gray-100 inline-block font-medium" %>
    </div>
  </div>
</div>
