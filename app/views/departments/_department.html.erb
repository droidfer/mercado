<div id="<%= dom_id department %>">
  
  <p class="mt-5 text-3xl">
    <%= department.name %>
  </p>
  
  <p class="mt-1">
    <%= department.description %>
  </p>
  
  <p class="mt-1 mb-5 italic font-light">
    <%= department.company&.name %>
  </p>
  

  <% if action_name != "show" %>
    <%= link_to "Show this department", department, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this department', edit_department_path(department), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
